<p id="notice"><%= notice %></p>

<div class="masthead">
  <p class="lead">
    <strong>Name:</strong>
    <%= @task.name %>
  </p>

  <p class="lead">
    <strong>Executable path:</strong>
    <%= @task.executable_path %>
  </p>

  <p class="lead">
    <strong>Start time:</strong>
    <%= @task.start_time %>
  </p>

  <p class="lead">
    <strong>End time:</strong>
    <%= @task.end_time %>
  </p>

  <p class="lead">
    <strong>Status:</strong>
    <%= @task.status.try(:upcase) %>
  </p>

  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
</div>
